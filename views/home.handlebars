<div class="container">
    <div class="row">
        <h1>REGISTRATION NUMBERS</h1>
    </div>
    <div class="row">
        {{#if messages.info}}
        <div class="error">
            <h4> {{messages.info}}</h4>
        </div>
        {{/if}}
    </div>

    {{!-- <div class="error">
        {{message.info}}
    </div> --}}
    <div class="row">
        <form action="/addPlate" method="POST">

            <div class="col-md-12">
                <div class="input-group  mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-lg">REGISTRATION</span>
                    </div>
                    <br><br>
                    <input type="text" class="form-control registrType" pattern="/[A-Z]{2}\s\d{3}\W\d{3}|[A-Z]{2}\s\d{3}\W\d{3}"
                        name="textBox" placeholder="e.g. CA 123-1235" aria-label="Large" aria-describedby="inputGroup-sizing-sm"
                        onkeyup="this.value = this.value.toUpperCase();">
                    {{!-- <button class="btn btn-primary add-btn" type="submit"><strong>Add</strong></button> --}}
                </div>
            </div>
            <div class="col-md-12">
                <button class="btn btn-primary add-btn" type="submit"><strong>Add</strong></button>
            </div>
        </form>
    </div>

    {{!-- Second form --}}
    <form action="/clear" method="POST">
        <div class="col-md-12">
            <button class="btn btn-primary resetBtn" type="submit"><strong>Reset</strong></button>
        </div>
    </form>
    <div class="row">
        <div class "col-md-12 fourRadios">
            <select class="custom-select mr-sm-2 town-dropdown" id='dropDown' name="plate" onclick="myTowns()">
                <option value="ALL">ALL</option>
                {{#each allTowns}}
                <option value="{{tag}}" {{selected}}>{{town}}</option>
                {{/each}}
            </select>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <!-- regList displays here -->
            {{#each regNumbers}}
            <span class="display">{{this.registration}}</span>
            {{/each}}
        </div>
    </div>
</div>
<script type="text/javascript">
    function myTowns() {
        var town = document.querySelector('.town-dropdown');
        location.href = '/filters/' + town.value;
    }
</script>