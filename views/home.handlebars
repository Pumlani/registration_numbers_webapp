<div class="container">
    <div class="row">
        <h1>REGISTRATION NUMBERS</h1>
    </div>
    <div class="row">
        <div class="alert">
        </div>
    </div>
    <div class="row">
        <form action="/addPlate" method="POST">

            <div class="col-md-4">
                <div class="input-group  mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-lg">REGISTRATION</span>
                    </div>
                    <br><br>
                    <input type="text" class="form-control registrType" name="textBox" placeholder="Enter a valid registration"
                        aria-label="Large" aria-describedby="inputGroup-sizing-sm">
                </div>
            </div>
            <div class="col-md-4">
                <button class="btn btn-primary add-btn" type="submit"><strong>Add</strong></button>
            </div>
        </form>
    </div>

    {{!-- Second form --}}
    <form action="/clear" method="POST">
        <div class="col-md-6">
            <button class="btn btn-primary resetBtn" type="submit"><strong>Reset</strong></button>
        </div>

    </form>



    <div class="row">
        <div class "col-md-4 fourRadios">
            <select class="custom-select mr-sm-2 town-dropdown" id='dropDown' name="plate" onclick="myTowns()">
                <option value="ALL">ALL</option>
                {{#each allTowns}}
                <option value="{{tag}}">{{town}}</option>
                {{/each}}
            </select>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <ul class="display-area col-md-2">
                <!-- regList displays here -->
                {{#each filredReg}}
                <h2><span>{{this.registration}}</span></h2>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="clo-md-12">
            {{#each allReg}}
            <h2><span>{{this.registration}}</span></h2>
            {{/each}}

        </div>
    </div>
</div>
<script type="text/javascript">
    function myTowns() {
        var town = document.querySelector('.town-dropdown');
        location.href = '/filters/' + town.value;
    }
</script>